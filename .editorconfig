# EditorConfig derived from existing clang-format defaults
# See: .clang-format (LLVM base, 4-space indent, 100-col limit)
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,cc,cpp,cxx,h,hpp,hxx}]
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 100

[CMakeLists.txt]
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 100

[*.cmake]
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 100

[*.{json,toml}]
indent_style = space
indent_size = 4
tab_width = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2
tab_width = 2

[*.{sh,bash}]
indent_style = space
indent_size = 4
tab_width = 4