{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": ".common",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": ".debug",
      "hidden": true,
      "inherits": ".common",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": ".release",
      "hidden": true,
      "inherits": ".common",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": ".relwithdebinfo",
      "hidden": true,
      "inherits": ".common",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": ".asan",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_ASAN": "ON"
      }
    },
    {
      "name": ".ubsan",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_UBSAN": "ON"
      }
    },
    {
      "name": ".test",
      "hidden": true,
      "cacheVariables": {
        "BUILD_TESTING": "ON",
        "CMAKE_BUILD_PARALLEL_LEVEL": "4"
      }
    },
    {
      "name": ".clang-tidy",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_CLANG_TIDY": "ON"
      }
    },
    {
      "name": ".profiling",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_PROFILING": "ON"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug",
      "description": "Debug build with no optimizations",
      "inherits": ".debug"
    },
    {
      "name": "release",
      "displayName": "Release",
      "description": "Release build with optimizations",
      "inherits": ".release"
    },
    {
      "name": "relwithdebinfo",
      "displayName": "RelWithDebInfo",
      "description": "Release with debug symbols for profiling",
      "inherits": ".relwithdebinfo"
    },
    {
      "name": "asan",
      "displayName": "Debug + AddressSanitizer",
      "description": "Debug build with AddressSanitizer for memory issues",
      "inherits": [
        ".debug",
        ".asan"
      ]
    },
    {
      "name": "ubsan",
      "displayName": "Debug + UndefinedBehaviorSanitizer",
      "description": "Debug build with UBSan for undefined behavior",
      "inherits": [
        ".debug",
        ".ubsan"
      ]
    },
    {
      "name": "asan-ubsan",
      "displayName": "Debug + ASAN + UBSAN",
      "description": "Debug build with both sanitizers",
      "inherits": [
        ".debug",
        ".asan",
        ".ubsan"
      ]
    },
    {
      "name": "test",
      "displayName": "Test (Debug + ASAN + Clang-Tidy)",
      "description": "Optimized for testing with AddressSanitizer, parallel builds, and static analysis",
      "inherits": [
        ".debug",
        ".asan",
        ".test",
        ".clang-tidy"
      ]
    },
    {
      "name": "quality",
      "displayName": "Quality Assurance (Debug + ASAN + Clang-Tidy)",
      "description": "Debug build with comprehensive code quality checks",
      "inherits": [
        ".debug",
        ".asan",
        ".clang-tidy"
      ]
    },
    {
      "name": "profile",
      "displayName": "Profile (Release + Tracy)",
      "description": "Release build with Tracy profiler enabled",
      "inherits": [
        ".release",
        ".profiling"
      ]
    },
    {
      "name": ".i686",
      "hidden": true,
      "inherits": ".common",
      "toolchainFile": "${sourceDir}/cmake/toolchain-i686.cmake",
      "cacheVariables": {
        "GOGGLES_LAYER_ONLY": "ON"
      }
    },
    {
      "name": "debug-i686",
      "displayName": "Debug (i686)",
      "description": "32-bit layer only - debug build",
      "inherits": [
        ".i686",
        ".debug"
      ]
    },
    {
      "name": "release-i686",
      "displayName": "Release (i686)",
      "description": "32-bit layer only - release build",
      "inherits": [
        ".i686",
        ".release"
      ]
    },
    {
      "name": "profile-i686",
      "displayName": "Profile (i686)",
      "description": "32-bit layer only - release build with Tracy profiler",
      "inherits": [
        ".i686",
        ".release",
        ".profiling"
      ]
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "relwithdebinfo",
      "configurePreset": "relwithdebinfo"
    },
    {
      "name": "asan",
      "configurePreset": "asan"
    },
    {
      "name": "ubsan",
      "configurePreset": "ubsan"
    },
    {
      "name": "asan-ubsan",
      "configurePreset": "asan-ubsan"
    },
    {
      "name": "test",
      "configurePreset": "test"
    },
    {
      "name": "quality",
      "configurePreset": "quality"
    },
    {
      "name": "profile",
      "configurePreset": "profile"
    },
    {
      "name": "debug-i686",
      "configurePreset": "debug-i686"
    },
    {
      "name": "release-i686",
      "configurePreset": "release-i686"
    },
    {
      "name": "profile-i686",
      "configurePreset": "profile-i686"
    }
  ],
  "testPresets": [
    {
      "name": "test",
      "displayName": "Test Execution (with parallel execution)",
      "description": "Optimized test execution with AddressSanitizer",
      "configurePreset": "test",
      "output": {
        "verbosity": "verbose"
      },
      "execution": {
        "jobs": 0
      }
    },
    {
      "name": "asan",
      "displayName": "ASAN Test Execution",
      "description": "Test execution with AddressSanitizer",
      "configurePreset": "asan",
      "output": {
        "verbosity": "verbose"
      },
      "execution": {
        "jobs": 0
      }
    }
  ]
}