{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": ".common",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": ".vcpkg",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        }
      }
    },
    {
      "name": ".debug",
      "hidden": true,
      "inherits": ".common",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": ".release",
      "hidden": true,
      "inherits": ".common",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": ".relwithdebinfo",
      "hidden": true,
      "inherits": ".common",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": ".asan",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_ASAN": "ON"
      }
    },
    {
      "name": ".ubsan",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_UBSAN": "ON"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug",
      "description": "Debug build with no optimizations",
      "inherits": [".debug", ".vcpkg"]
    },
    {
      "name": "release",
      "displayName": "Release",
      "description": "Release build with optimizations",
      "inherits": [".release", ".vcpkg"]
    },
    {
      "name": "relwithdebinfo",
      "displayName": "RelWithDebInfo",
      "description": "Release with debug symbols for profiling",
      "inherits": [".relwithdebinfo", ".vcpkg"]
    },
    {
      "name": "asan",
      "displayName": "Debug + AddressSanitizer",
      "description": "Debug build with AddressSanitizer for memory issues",
      "inherits": [".debug", ".asan", ".vcpkg"]
    },
    {
      "name": "ubsan",
      "displayName": "Debug + UndefinedBehaviorSanitizer",
      "description": "Debug build with UBSan for undefined behavior",
      "inherits": [".debug", ".ubsan", ".vcpkg"]
    },
    {
      "name": "asan-ubsan",
      "displayName": "Debug + ASAN + UBSAN",
      "description": "Debug build with both sanitizers",
      "inherits": [".debug", ".asan", ".ubsan", ".vcpkg"]
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "relwithdebinfo",
      "configurePreset": "relwithdebinfo"
    },
    {
      "name": "asan",
      "configurePreset": "asan"
    },
    {
      "name": "ubsan",
      "configurePreset": "ubsan"
    },
    {
      "name": "asan-ubsan",
      "configurePreset": "asan-ubsan"
    }
  ]
}
